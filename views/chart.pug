.row
  .col-lg-12
    h1.page-header
      | Chart
      small  Visualization of logs
.row
  .col-md-3.col-md-push-9
    .row
      .col-md-12
        form.form.clearfix
          .form-group
            label Duration
            .input-group
              input.form-control#duration-start(type='text', placeholder='2016010113')
              span.input-group-addon to
              input.form-control#duration-end(type='text', placeholder='2016011019')
          button.btn.btn-success.btn-block.pull-right#duration-btn(onclick='fetchData()') Apply
      .col-md-12
        .col-md-6
          .material-switch
            input#status0(name='status', type='checkbox', checked)
            label(for='status0')
            span &nbsp;&nbsp;&nbsp;&nbsp;定點
        .col-md-6
          .material-switch
            input#status1(name='status', type='checkbox', checked)
            label(for='status1')
            span &nbsp;&nbsp;&nbsp;&nbsp;載客
        .col-md-6
          .material-switch
            input#status2(name='status', type='checkbox', checked)
            label(for='status2')
            span &nbsp;&nbsp;&nbsp;&nbsp;空車
        .col-md-6
          .material-switch
            input#status3(name='status', type='checkbox', checked)
            label(for='status3')
            span &nbsp;&nbsp;&nbsp;&nbsp;休息
        .col-md-6
          .material-switch
            input#status4(name='status', type='checkbox', checked)
            label(for='status4')
            span &nbsp;&nbsp;&nbsp;&nbsp;登出
        .col-md-6
          .material-switch
            input#status5(name='status', type='checkbox', checked)
            label(for='status5')
            span &nbsp;&nbsp;&nbsp;&nbsp;前往
        .col-md-6
          .material-switch
            input#status6(name='status', type='checkbox', checked)
            label(for='status6')
            span &nbsp;&nbsp;&nbsp;&nbsp;未知
        .col-md-6
          .material-switch
            input#status7(name='status', type='checkbox', checked)
            label(for='status7')
            span &nbsp;&nbsp;&nbsp;&nbsp;排班
      .col-md-12
        svg#d3-map(width='100%', height='400px')
  .col-md-9.col-md-pull-3
    .row
      .col-md-6.info-col.hide
        object(data='/static/img/thermometer.svg', type='image/svg+xml')
      .col-md-6.info-col.hide
        object(data='/static/img/rain.svg', type='image/svg+xml')
      .col-md-12#chart-div
script(src='/static/js/chart-script.js')
