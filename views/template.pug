doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title TLVisual - Visualization of taxi logs
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/static/css/sb-admin.css')
    link(rel='stylesheet', href='/static/css/style.css')
  body
    #wrapper
      // Navigation
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse-primary')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='index.html') TLVisual
        // Top Menu Items
        ul.nav.navbar-right.top-nav
          li.dropdown
            a.dropdown-toggle(href='javascript:void(0)', data-toggle='dropdown')
              i.fa.fa-user= ' ' + username
              b.caret
            ul.dropdown-menu
              li
                a(href='javascript:signout()')
                  i.fa.fa-fw.fa-power-off
                  |  Log Out
        // Sidebar Menu Items - These collapse to the responsive navigation menu on small screens
        #navbar-collapse-primary.collapse.navbar-collapse
          ul.nav.navbar-nav.side-nav
            li
              a(href='javascript:void(0)', onclick='renderDashboard(this)')
                i.fa.fa-fw.fa-dashboard
                |  Dashboard
            if admin
              li
                a(href='javascript:void(0)', onclick='renderUpload(this)')
                  i.fa.fa-fw.fa-cloud-upload
                  |  Upload
            li
              a(href='javascript:void(0)', onclick='renderChart(this)')
                i.fa.fa-fw.fa-bar-chart-o
                |  Charts
        // /.navbar-collapse
      #page-wrapper
        .container-fluid
    // /#wrapper
    // jQuery
    script(src='https://code.jquery.com/jquery-2.2.4.min.js')
    script(src='https://code.jquery.com/ui/1.12.0-rc.2/jquery-ui.min.js')
    // Bootstrap Core JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(src='/static/js/script.js')
    // D3
    script(src='https://d3js.org/d3.v3.min.js', charset='utf-8')
    script(src='https://d3js.org/topojson.v1.min.js')
